{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "NodeNext",
        "lib": ["ES2020", "WebWorker"],
        "moduleResolution": "NodeNext",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        "outDir": "dist",
        "composite": true
    },
    "include": ["src"]
}
